<Application x:Class="Cryptocurrency.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:Cryptocurrency.Helper"
             Startup="OnStartup">
    <Application.Resources>
        <local:ViewModelLocator x:Key="ViewModelLocator"/>

        <ResourceDictionary x:Key="ResourcesDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/LightTheme.xaml"/>
                <ResourceDictionary Source="Style/DarkTheme.xaml"/>
                <ResourceDictionary Source="Localization/Eng.xaml"/>
                <ResourceDictionary Source="Localization/Ukr.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
